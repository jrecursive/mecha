${root} = (with-coverage partition-marker:"<<${guid}-p>>" host-marker:"<<${guid}-h>>" bucket:${args.bucket} do:(warp host:<<${guid}-h>> do:(compute-schema partition:<<${guid}-p>> bucket:${args.bucket} max-samples:${args.max-samples})))
${guid}-reducer = (value-count-reducer)
